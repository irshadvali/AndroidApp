<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgot_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.irshad.uiretrofitapp.ui.ForgotPassword">

    <LinearLayout
        android:id="@+id/toolbarLay"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/green_color">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/back_vec_ico"
            android:scaleType="centerInside"
            android:id="@+id/forgotBackBtn"
            android:padding="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Forgot Password"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/toolbarLay"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@color/white">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/emailEt"
                    android:layout_width="match_parent"
                    android:hint="Email"
                    android:textColor="#4d4d4d"
                    android:textColorHint="#4d4d4d"
                    android:fontFamily="sans-serif-condensed"
                    android:textColorHighlight="#4d4d4d"
                    android:layout_height="40dp"
                    android:gravity="top"
                    android:background="@color/transparent"/>

            </android.support.design.widget.TextInputLayout>


        </RelativeLayout>

        <Button
            android:id="@+id/sendPassBtn"
            android:layout_width="match_parent"
            android:height="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:text="Get Password"
            android:textSize="18sp"
            android:fontFamily="sans-serif-condensed"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/signup_btn_bg"
            android:layout_height="50dp" />

    </LinearLayout>

    <TextView
        android:text="@string/footer_disc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView10"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="10dp"
        android:layout_marginBottom="10dp" />


</RelativeLayout>
